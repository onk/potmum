{
    "name": "Potmum",
    "description": "Potmum is cloud note-app.",
    "repository": "https://github.com/onk/potmum",
    "logo": "https://raw.githubusercontent.com/onk/potmum/master/logo.png",
    "keywords": ["note"],
    "addons": ["heroku-postgresql:hobby-dev", "heroku-redis:hobby-dev"],
    "env": {
        "RAILS_ENV": "production",
        "SECRET_KEY_BASE": {
            "description": "secret-key for generate session",
            "generator": "secret"
        },
        "USE_DEVELOPER": "1"
    },
    "scripts": {
        "postdeploy": "bundle exec rake db:migrate",
        "dokku": {
            "predeploy": "bundle exec rake db:migrate"
        }
    },
    "buildpacks": [
        {
            "url": "https://github.com/heroku/heroku-buildpack-nodejs.git"
        },
        {
            "url": "https://github.com/heroku/heroku-buildpack-ruby.git"
        }
    ]
}
